---
interface Props {
  label: string;
  btnClasses: string;
}

const { label, btnClasses } = Astro.props;
---

<a href="https://forms.gle/pGgyLftxGDAPm2GHA" target="_blank" class={btnClasses}
  >{label}</a
>

<style lang="scss">
  @use "../assets/sass/mixin.scss" as *;
  @use "../assets/sass/variable.scss" as *;
  @use "../assets/sass/root.scss" as *;
  @use "../assets/sass/base.scss" as *;

  .btn {
    margin-bottom: 0;
    text-align: center;
    white-space: nowrap;
    vertical-align: middle;
    -ms-touch-action: manipulation;
    touch-action: manipulation;
    border: 1px solid var(--primaryClr);
    background-color: var(--primaryClr);
    color: var(--primaryClr-00);
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    line-height: 1.5;
    border-radius: 5rem;
    width: max-content;
    box-shadow: var(--boxShadow-sm);
    transition: all 0.3s ease-in-out;

    &:hover {
      background-color: var(--primaryClr-700);
      box-shadow: var(--boxShadow-lg);
      text-decoration: none;
    }
  }
</style>
