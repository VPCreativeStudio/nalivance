---
interface Props {
  heading: string;
  content: String;
}

const { heading, content } = Astro.props;
---

<div class="idea-chip">
  <span>{heading}</span>
  <small class="para">{content}</small>
</div>

<style lang="scss">
  @use "../assets/sass/mixin.scss" as *;
  @use "../assets/sass/variable.scss" as *;
  @use "../assets/sass/root.scss" as *;
  @use "../assets/sass/base.scss" as *;

  .idea-chip {
    background-color: var(--primaryClr-100);
    padding: 0.75rem 1.5rem;
    border-radius: 5rem;
    @include flex-element;
    gap: 0.5rem;
    font-size: 1rem;

    span {
      color: var(--primaryClr);
    }
    small {
      color: var(--primaryClr-l-00);
      margin: 0;
    }
  }
</style>
