---
import Button from "../components/button.astro";
import Logo from "../components/logo.astro";
import Nav from "../components/navigation.astro";
---

<header>
  <div class="head-section">
    <Logo />
    <Nav />
  </div>

  <Button btnClasses="btn btn-primary" label="Set Started" />
</header>

<style lang="scss" is:global>
  @use "../assets/sass/mixin.scss" as *;
  @use "../assets/sass/variable.scss" as *;
  @use "../assets/sass/root.scss" as *;
  @use "../assets/sass/base.scss" as *;

  header {
    @include fixed-position;
    @include flex-element();
    justify-content: space-between;
    align-items: center;
    padding: 1rem 4rem;
    background-color: var(--primaryClr-00);
    width: 100vw;
    top: -10rem;
    transition: all 0.5s ease-in-out;
    z-index: -1;

    .head-section {
      @include flex-element;
      align-items: center;
      gap: 2rem;
    }

    &.scrolled {
      top: 0;
      z-index: 9;
    }
    &.hidden {
      top: -10rem;
      z-index: -1;
    }
  }

  @media (max-width: 50rem) {
    header {
      padding: 0.5rem 2rem;
      justify-content: center;

      nav,
      .btn {
        @include hide-element;
      }
    }
  }
</style>
