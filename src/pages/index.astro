---
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import Heading from "../components/heading.astro";
import Nav from "../components/navigation.astro";
import SectionHeader from "../components/section-header.astro";
import AboutCard from "../components/card-about.astro";
import Chip from "../components/chip.astro";
import Talk from "../components/lets-talk.astro";
import Layout from "../layouts/Layout.astro";
import Button from "../components/button.astro";
import Portfolio from "../components/portfolio.astro";

// Import local JSON files directly
